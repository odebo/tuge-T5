<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppSpash" parent="@android:style/android:Theme">

        <!-- 去掉window背景 -->
        <item name="android:windowBackground">@mipmap/bg_icon</item>
        <!-- 去掉Title -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!--<style name="AppSpash" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">-->

        <!--&lt;!&ndash; 去掉window背景 &ndash;&gt;-->
        <!--<item name="android:windowBackground">@mipmap/bg_icon</item>-->
        <!--&lt;!&ndash; 去掉Title &ndash;&gt;-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowFullscreen">true</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->

    <!--</style>-->        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


    <style name="cameraScrollerBar">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">6.0dip</item>
        <item name="android:paddingRight">6.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="cardHeadTitle">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemPersonName">
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemComment">
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="cardItemCommentDate">
        <item name="android:textColor">#d6d6d6</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">italic</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="positionIndicator">
        <item name="android:textColor">#8cffffff</item>
        <item name="android:textSize">66sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="positionIndicatorCurrent" parent="positionIndicator">
        <!--<item name="android:textColor">#da7c80b8</item>-->
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="SpinnerStyle">
        <item name="colorAccent">#888888</item>
        <item name="colorControlNormal">#ddffffff</item> <!--改变了spinner的颜色  -->
    </style>
    <style name="FullActivity" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#fff</item>
        <item name="android:windowFullscreen">true</item>
    </style>




</resources>
